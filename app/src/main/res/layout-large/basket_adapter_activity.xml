<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:clickable="false"
    android:focusable="false" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout23"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/BtnSelectfav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/star_nill"
                android:contentDescription="@string/hello_world" />

            <TextView
                android:id="@+id/tvItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="This is Title Text"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemIDInBasketAdapter"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvAdapterSign"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/imgBtnPlusID"
                android:layout_marginStart="10dp"
                android:text="Â£"
                android:textColor="@color/Red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPriceIDitem"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/imgBtnPlusID"
                android:layout_marginRight="11dp"
                android:layout_marginStart="10dp"
                android:layout_toLeftOf="@+id/imgBtnPlusID"
                android:layout_toStartOf="@+id/imgBtnPlusID"
                android:gravity="center"
                android:text="888888"
                android:textColor="@color/Red"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/imgadd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/add_btn"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/BtnMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/minus_btn"
                android:contentDescription="@string/hello_world"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="testing testing testing testing testing testing testing testing testing testing"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>