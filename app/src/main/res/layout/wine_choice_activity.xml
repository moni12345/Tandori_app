<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bk_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/top_bar_n"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bBackFromWineChoice"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/loginicon"
            android:text="back"
            android:textColor="@android:color/white" />

        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bLoginFromWineChoice"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/loginicon"
            android:text="Login"
            android:textColor="@android:color/white" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/morelnk"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold" />

          <TextView
            android:id="@+id/tvtitle"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
             android:textColor="@color/Red"
            android:gravity="left"
            android:text="Â£" />
        <TextView
            android:id="@+id/tvItemPriceInWineChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1.5"
            android:textColor="@color/Red"
            android:gravity="left"
            android:text="TextView" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:id="@+id/linearTextLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.05" >
  <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2.5"
        android:layout_gravity="right">
        <Button
            android:id="@+id/bAdditem"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
           android:layout_gravity="left"
            android:background="@drawable/loginicon"
            android:text="Add"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
</LinearLayout>
        <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="35dp"
      
        android:layout_weight="1"
        android:gravity="right">

        <Button
            android:id="@+id/bDiscard"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/loginicon"
            android:text="Discard"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

</LinearLayout>
    </LinearLayout>

    

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="5" >

        <ListView
            android:id="@+id/lvItemChoiceInWhine"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </FrameLayout>
</LinearLayout>
<TextView 
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_gravity="bottom"
    android:layout_weight="4"
    android:background="@drawable/special_item_footer"/>

</LinearLayout>